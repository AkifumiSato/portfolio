{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "jsx": "react",
    "lib": [
      "dom",
      "es2018"
    ],
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": ["./src/**/*"]
}
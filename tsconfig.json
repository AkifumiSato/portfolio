{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "module": "commonjs",
    "jsx": "react",
    "lib": [
      "dom",
      "es2018"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["./src/**/*"]
}